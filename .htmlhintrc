/**
 * HTMLHint configuration for FlowGateX
 * Enforces: no inline styles, no hardcoded color values in HTML files.
 *
 * Usage:
 *   npx htmlhint index.html
 *   npx htmlhint "**/*.html"
 *
 * CI integration: add to package.json scripts:
 *   "lint:html": "htmlhint index.html"
 */
{
  "tagname-lowercase": true,
  "attr-lowercase": true,
  "attr-value-double-quotes": true,
  "doctype-first": true,
  "tag-pair": true,
  "spec-char-escape": true,
  "id-unique": true,
  "src-not-empty": true,
  "attr-no-duplication": true,
  "title-require": true,
  "inline-style-disabled": true,
  "head-script-disabled": false
}
